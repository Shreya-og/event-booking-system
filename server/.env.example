# Use either DATABASE_URL or the DB_* variables below by replacing the placeholders.
DATABASE_URL=mysql://username:password@host:13115/your_dbname?ssl-mode=REQUIRED

# or individual fields:
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=eventify_db
DB_PORT=3306

# SSL/TLS options
DB_SSL=true

# Use a path to CA PEM stored on disk (recommended), or base64-encoded content:
# DB_SSL_CA=./secrets/example.pem
# DB_SSL_CA_CONTENT=<BASE64_PEM_CONTENT>